<div class="new-wrapper">
  <div class="new-container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h2 class="new-user">新規登録</h2>
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'form-text' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'form-text' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'form-text' %>
              <%= f.password_field :password, class: 'form-control' %>
              <div class="attention"><p>※8~32文字の半角英数字の混合のみ可能です</p></div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: 'form-text' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              <div class="attention"><p>※確認のためもう一度入力してください</p></div>
            </div>

            <%= f.submit "登録", class: 'form-text' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
